<Window x:Class="AIMuster.UI.SetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:AIMuster.UI"
        xmlns:behaviors="clr-namespace:AIMuster.Behaviors"
        mc:Ignorable="d"
        Title="{DynamicResource Title_SetWindow}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource RowTb_SetWindow}"></TextBlock >
        <TextBox Grid.Row="0" Grid.Column="1" behaviors:NumberTextBoxInputBehavior.IsNumeric="True"  Text="{Binding AppConfig.RowCount, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SaveConfigCommand}"></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource ColumnTb_SetWindow}"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" behaviors:NumberTextBoxInputBehavior.IsNumeric="True" Text="{Binding AppConfig.ColumnCount, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SaveConfigCommand}"></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Language_SetWindow}"></TextBlock>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  SelectedValuePath="Tag"
                  SelectedValue="{Binding AppConfig.Language,Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding LanguageChangedCommand}" CommandParameter="{Binding SelectedValue,RelativeSource={RelativeSource AncestorType=ComboBox}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ComboBoxItem Content="中文" Tag="zh"/>
            <ComboBoxItem Content="English" Tag="en"/>
        </ComboBox>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource Theme_SetWindow}"></TextBlock>
        <StackPanel Grid.Row="3" Grid.Column="1"  HorizontalAlignment="Left" Orientation="Horizontal">
            <RadioButton GroupName="theme" VerticalAlignment="Center" VerticalContentAlignment="Center"
 Content="{DynamicResource Light_SetWindow}"  IsChecked="{Binding AppConfig.Theme,Converter={StaticResource ThemeToBool},ConverterParameter=Light}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Checked">
                        <i:InvokeCommandAction Command="{Binding SaveConfigCommand}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </RadioButton>
            
            <RadioButton GroupName="theme" VerticalAlignment="Center" VerticalContentAlignment="Center"
 Content="{DynamicResource Dark_SetWindow}" IsChecked="{Binding AppConfig.Theme,Converter={StaticResource ThemeToBool},ConverterParameter=Dark}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Checked">
                        <i:InvokeCommandAction Command="{Binding SaveConfigCommand}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </RadioButton>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" >
            <Button Content="{DynamicResource Close_General}" >
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <!--<Button Content="{DynamicResource Cancel_General}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding LanguageChangedCommand}" CommandParameter="{Binding SelectedValue,RelativeSource={RelativeSource AncestorType=ComboBox}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>-->
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <TextBlock FontSize="10" Text="{Binding Version}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
